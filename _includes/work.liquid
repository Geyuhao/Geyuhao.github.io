<div class="work-experience">
  {% if site.data.work != blank %}
    {% assign work_size = site.data.work | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.data.work.scrollable and work_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign work = site.data.work %}
        {% for item in work %}
          <tr>
            <td style="width: 30%">
              <strong>{{ item.company }}</strong>
            </td>
            <td style="width: 50%">{{ item.position }}</td>
            <td style="width: 20%">{{ item.period }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No work experience so far...</p>
  {% endif %}
</div>
