<div class="education">
  {% if site.data.education != blank %}
    {% assign education_size = site.data.education | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.education.scrollable and education_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign education = site.data.education %}
        {% for item in education %}
          <tr>
            <td style="width: 70%">
              <strong>{{ item.institution }}</strong><br>
              <span style="font-size: 0.9em; color: #666;">{{ item.degree }}</span>
            </td>
            <td style="width: 30%; text-align: right;">{{ item.period }}</td>
          </tr>
          {% if include.detailed %}
            <tr>
              <td colspan="2">
                {% if item.details %}
                  <ul>
                    {% for detail in item.details %}
                      <li>{{ detail | markdownify }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
            </tr>
          {% endif %}
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No education experience so far...</p>
  {% endif %}
</div>
