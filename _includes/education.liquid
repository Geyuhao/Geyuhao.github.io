<div class="education">
  {% if site.data.education != blank %}
    {% assign education_size = site.data.education | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.education.scrollable and education_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign education = site.data.education %}

        {% for item in education %}
          <tr>
            <td style="width: 50%">
              <strong>{{ item.institution }}</strong>
            </td>
            <td style="width: 30%">{{ item.degree }}</td>
            <td style="width: 20%">{{ item.period }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No education experience so far...</p>
  {% endif %}
</div>
